{
  "name": "tmu-to-ical",
  "version": "1.0.2",
  "description": "Convert TMU schedule to iCal",
  "module": "src/index.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cecon123/tmu-to-ical.git"
  },
  "bugs": {
    "url": "https://github.com/cecon123/tmu-to-ical/issues"
  },
  "homepage": "https://github.com/cecon123/tmu-to-ical#readme",
  "userscriptHeader": {
    "@match": [
      "http*://congdaotao.tmu.edu.vn/*"
    ],
    "@grant": [
      "GM_xmlhttpRequest",
      "GM_addStyle"
    ],
    "@run-at": "document-start",
    "@icon": "https://congdaotao.tmu.edu.vn/static/images/logos/logo-dhtm-3.png"
  },
  "author": "cecon123",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/yargs": "^17.0.33",
    "bun-style-loader": "^0.4.0",
    "rimraf": "^6.0.1",
    "sass": "^1.79.4",
    "type-fest": "^4.26.1",
    "winston": "^3.14.2",
    "yargs": "^17.7.2"
  },
  "peerDependencies": {
    "typescript": "^5.6.2"
  },
  "scripts": {
    "build": "bun build.ts",
    "build:dev": "bun build.ts --dev",
    "build:watch": "bun build.ts --dev --watch",
    "build:workflow": "bun build.ts --release-channel GitHubRelease",
    "clean": "rimraf ./dist/",
    "dev": "bun build.ts --dev --server --watch"
  }
}
